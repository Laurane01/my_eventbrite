<h1> Editer l'Event </h1>
<%= form_for @event do |f| %>
<div class="form-group">
    <label> Titre de l'Event </label>
    <%= f.text_field :title, class: 'form-control' %>
</div>
<%= form_for @event do |f| %>
<div class="form-group">
    <label> Description de l'Event </label>
    <%= f.text_area :description, class: 'form-control' %>
</div>
<div class-"form-group">
    <button type="submit">Modifier l'Event</button>
</div>
<% end %>
<% end %>